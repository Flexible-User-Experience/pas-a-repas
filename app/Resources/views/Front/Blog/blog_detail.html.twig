{% extends 'Front/Blog/blog.html.twig' %}

{% block title %}{{ post.title }} Â· {{ parent() }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">&nbsp;</div>
        </div>
    </div>
    {% if not post.enabled %}
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="alert alert-danger" role="alert"><i class="fa fa-exclamation-circle"></i> Esborrany</div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                {# left side #}
                {% if post.imageName %}
                    <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('1200xY') }}" class="img-responsive extra-m-bottom" alt="{{ post.title }}">
                {% else %}
                    <img src="{{ asset('bundles/app/images/blog-head.png') | imagine_filter('1200xY') }}" class="img-responsive extra-m-bottom" alt="{{ 'frontend.index.main.image' | trans | capitalize }}">
                {% endif %}
                <h1 class="c-violet no-m-top">{{ post.title }}</h1>
                <h6>{{ post.publishedAt | date('d/m/Y') }}{% if post.categories | length > 0 %}&nbsp;&nbsp;|&nbsp;&nbsp;{{ post.categories | join(', ') }}{% endif %}</h6>
                {{ post.description | raw }}<br><br><br>
            </div>
            <div class="col-sm-4">
                {# right side #}
                {% include ':Front/Fragments:categories_side.html.twig' with { categories: post.categories } %}
            </div>
        </div>
    </div>
{% endblock %}
