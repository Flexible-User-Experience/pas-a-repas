{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %}

{% block sonata_admin_content %}
    <div class="sonata-ba-show">
        <div class="sonata-ba-view row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">Pregunta de l'usuari</h4>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table">
                            <tbody>
                            <tr class="sonata-ba-view-container">
                                <th>Data</th>
                                <td>{{ object.createdAt | date('d/m/Y H:i') }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>Nom</th>
                                <td>{{ object.name }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">El teu missatge</h4>
                    </div>
                    <div class="box-body">
                        {{ form(receiptType) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
