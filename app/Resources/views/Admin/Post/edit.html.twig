{% extends 'Admin/base_admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(edit_form) }}
{% endblock %}

{% block main -%}
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h1>{{ 'frontend.admin.post_edit' |trans |upper }}</h1>

                {{ form(edit_form) }}

                <ul class="record_actions">
                    <li>
                        <a href="{{ path('admin_post') }}">
                            {{ 'frontend.admin.back-list' |trans |capitalize }}
                        </a>
                    </li>
                    <li>{{ form(delete_form) }}</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(edit_form) }}
{% endblock %}

