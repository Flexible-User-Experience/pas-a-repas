{% extends ":Admin:show.html.twig" %}

{% block actions %}
    {{ parent() }}
    <li>{% include "SonataAdminBundle:Button:show_button.html.twig" %}</li>
{% endblock %}

{% block sonata_admin_content %}
    <div class="sonata-ba-show">
        <div class="sonata-ba-view row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">Pregunta de l'usuari</h4>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table">
                            <tbody>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'backend.admin.date' | trans }}</th>
                                <td>{{ object.createdAt | date('d/m/Y H:i') }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'backend.admin.name' | trans }}</th>
                                <td>{{ object.name }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'backend.admin.email' | trans }}</th>
                                <td>{{ object.email }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'backend.admin.phone' | trans }}</th>
                                <td>{{ object.phone }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'backend.admin.message' | trans }}</th>
                                <td>{{ object.message | raw }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">{{ 'backend.admin.your_message' | trans }}</h4>
                    </div>
                    <div class="box-body">
                        {{ form(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
