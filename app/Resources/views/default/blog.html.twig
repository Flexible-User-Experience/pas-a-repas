{% extends 'base.html.twig' %}

{% block title %}List of Posts{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>List of Posts</h1>
                {% for post in posts %}
                <div class="col-sm-3">
                    <div class="thumbnail">
                        <img src="{{ asset('bundles/app/images/650_1200.jpg') }}" alt="...">
                        {#{% for post in posts %}#}
                        {#{{ categories.title }}#}
                        {#{{ post.categories }}#}
                        {#{% endfor %}#}
                        <div class="caption">
                            <h2>{{ post.title }}</h2>
                            <h6>{{ post.publishedDate | date('Y-m-d H:i:s') }}</h6>
                            <p>{{ post.description | truncate(50) }}</p>
                            <p><a href="#" class="btn btn-primary" role="button">Seguir llegint</a></p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
